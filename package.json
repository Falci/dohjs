{
  "name": "dohjs",
  "version": "0.1.7",
  "description": "Do DNS over HTTPS lookups from your browser",
  "main": "lib/index.js",
  "dependencies": {
    "argparse": "^1.0.10",
    "browserify": "^16.5.0",
    "dns-packet": "^5.2.1"
  },
  "devDependencies": {
    "jest": "^25.1.0",
    "jsdoc-to-markdown": "^5.0.3",
    "live-server": "^1.2.1",
    "terser": "^4.6.3"
  },
  "scripts": {
    "test": "./test.sh",
    "start": "npx live-server --open=/public/index.html .",
    "prestart": "npm run build",
    "build": "browserify lib/index.js --standalone doh -o dist/doh.js",
    "prepare": "npm run build && npx terser dist/doh.js --compress --mangle --output=dist/doh.min.js",
    "docs": "jsdoc2md lib/index.js > docs/README.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/byu-imaal/dohjs.git"
  },
  "keywords": [
    "DNS",
    "DoH",
    "DNS over HTTPS"
  ],
  "author": "",
  "license": "GPL-3.0+",
  "bugs": {
    "url": "https://github.com/byu-imaal/dohjs/issues"
  },
  "homepage": "https://github.com/byu-imaal/dohjs#readme",
  "bin": {
    "dohjs": "./bin/doh.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "optionalDependencies": {},
  "files": [
    "dist/",
    "lib/",
    "bin/",
    "docs/",
    "examples/",
    "test.sh"
  ]
}
